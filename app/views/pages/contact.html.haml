#contact
  %h2.text-center LET'S TALK
  %form
    .row
      .span3.offset2
        = label_tag :name
        = text_field_tag :name, nil, class: 'span3'
        = label_tag :email
        = text_field_tag :email, nil, class: 'span3'
        = label_tag :phone
        = text_field_tag :phone, nil, class: 'span3'
        = label_tag :interested_in
        = select_tag :interested_in, options_for_select(['Development', 'Training', 'Consultancy', 'Other']), class: 'span3'

      .span5 
        = label_tag :message
        = text_area_tag :message, nil, class: 'span5', rows: '8'

        = submit_tag "Send", class: 'button'


  %hr
    %p.text-center.muted
      Prefer a simple email? 
      %br
      %i.icon-envelope
      %em hello@diacode.com